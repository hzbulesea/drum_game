<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dinner"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".PlaygroundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="600dp"
            android:layout_marginLeft="660dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icon_back"
            tools:ignore="InvalidId" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="78dp"
            android:layout_marginLeft="800dp"
            android:layout_marginBottom="200dp"
            app:srcCompat="@mipmap/dumpling3" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="78dp"
            android:layout_marginLeft="800dp"
            android:layout_marginBottom="200dp"
            android:background="@mipmap/dumpling3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="222dp">

        <ImageButton
            android:id="@+id/left"
            android:layout_width="151dp"
            android:layout_height="124dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/dumpling5" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="151dp"
            android:layout_height="112dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/dumpling6" />
    </LinearLayout>

</android.widget.LinearLayout>

