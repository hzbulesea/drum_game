<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@mipmap/dinner"
    android:orientation="vertical"
    tools:context=".PlaygroundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="78dp"
            android:layout_marginLeft="800dp"
            android:layout_marginBottom="200dp"
            app:srcCompat="@mipmap/dumpling3_2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="78dp"
            android:layout_marginLeft="800dp"
            android:layout_marginBottom="200dp"
            android:background="@mipmap/dumpling3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="222dp">

        <ImageButton
            android:id="@+id/left"
            android:layout_width="151dp"
            android:layout_height="138dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            app:srcCompat="@mipmap/dumpling4" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="151dp"
            android:layout_height="138dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            app:srcCompat="@mipmap/dumpling1" />
    </LinearLayout>

</android.widget.LinearLayout>

