<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dinner"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".PlaygroundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:paddingLeft="30dp"
            android:text="Score:"
            android:textColor="#F8D51A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scores"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:paddingLeft="10dp"
            android:text="100000"
            android:textAllCaps="false"
            android:textColor="#FCE629"
            android:textColorHighlight="#F9D51A"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="16dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/icon_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="105dp"
            android:layout_height="78dp"
            app:srcCompat="@mipmap/dumpling8" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="78dp"
            app:srcCompat="@mipmap/dumpling8" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="78dp"
            app:srcCompat="@mipmap/dumpling9" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="105dp"
            android:layout_height="78dp"
            app:srcCompat="@mipmap/dumpling9" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="222dp">

        <ImageButton
            android:id="@+id/left"
            android:layout_width="151dp"
            android:layout_height="124dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/dumpling5" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="151dp"
            android:layout_height="112dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/dumpling6" />
    </LinearLayout>

</android.widget.LinearLayout>

